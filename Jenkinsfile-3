#!groovy

pipeline {
  agent any
  tools {
     maven 'maven-3'
  }
  stages {
    stage("build & SonarQube analysis") {
       agent any
       steps {
          withSonarQubeEnv('sonarserver') {
             sh 'mvn clean package sonar:sonar'
          }
       }
    }
    stage("Quality Gate") {
        steps {
           timeout(time: 1, unit: 'HOURS') {
             waitForQualityGate abortPipeline: true
            }
         }
     }
    stage('App complie') {
      steps {
        sh './mvnw compile'
      }
    }
    stage('App test') {
      steps {
        sh './mvnw test'
      }
    }
    stage('Generate jar') {
      steps {
        sh './mvnw clean package'
      }
    }
    stage('Docker Build') {
      steps {
        sh 'docker build -t drexxcbba/petclinic:latest .'
      }
    }
    stage('Docker Push') {
      steps {
        withCredentials([usernamePassword(credentialsId: 'docker-hub', passwordVariable: 'dockerHubPassword', usernameVariable: 'dockerHubUser')]) {
          sh "docker login -u ${env.dockerHubUser} -p ${env.dockerHubPassword}"
          sh 'docker push drexxcbba/petclinic:latest'
        }
      }
    }
    stage('Test ssh') {
      steps{
        script{
          def remote = [:]
          remote.name = 'test'
          remote.host = '192.168.0.10'
          remote.allowAnyHosts = true
          withCredentials([usernamePassword(credentialsId: 'rodrigo-machine', passwordVariable: 'rodrigoPassword', usernameVariable: 'rodrigoUser')]) {
            remote.user = rodrigoUser
            remote.password = rodrigoPassword
            sshCommand remote: remote, command: "whoami"
          }
        }
      }
    }
  }
} 
