#!groovy

pipeline {
  agent any
  tools {
     maven 'maven-3'
  }
  stages {
    stage ('Scan and Build Jar File') {
       withSonarQubeEnv('sonarserver') {
          sh 'mvn clean package sonar:sonar'
       }    
    }
    stage("Quality Gate"){
        timeout(time: 1, unit: 'HOURS') {
            def qg = waitForQualityGate()
            if (qg.status != 'OK') {
                error "Pipeline aborted due to quality gate failure: ${qg.status}"
            }
        }
     }
  }
} 
