#!groovy

pipeline {
  agent any
  tools {
     maven 'maven-3'
  }
  stages {
    stage('App complie') {
      steps {
        sh './mvnw compile'
      }
    }
    stage('App test') {
      steps {
        sh './mvnw test'
      }
    }
    stage('Generate jar') {
      steps {
        sh './mvnw clean package'
      }
    }
    stage('Docker Build') {
      agent any
      steps {
        sh 'docker build -t drexxcbba/petclinic:latest .'
      }
    }
  }
} 
