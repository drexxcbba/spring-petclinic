#!groovy

pipeline {
  agent any
  tools {
     maven 'maven-3'
  }
  stages {
    stage("build & SonarQube analysis") {
       agent any
       steps {
          withSonarQubeEnv('sonarserver') {
             sh 'mvn clean package sonar:sonar'
          }
       }
    }
    stage("Quality Gate") {
        steps {
           timeout(time: 1, unit: 'HOURS') {
             waitForQualityGate abortPipeline: true
            }
         }
     }
    stage('App complie') {
      steps {
        sh './mvnw compile'
      }
    }
    stage('App test') {
      steps {
        sh './mvnw test'
      }
    }
    stage('Generate jar') {
      steps {
        sh './mvnw clean package'
      }
    }
   }
} 
