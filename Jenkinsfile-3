#!groovy

pipeline {
  agent any
  tools {
     maven 'maven-3'
  }
  stage ('Scan and Build Jar File') {
    steps {
      withSonarQubeEnv(installationName: 'Production SonarQubeScanner', credentialsId: 'sonar-key') {
           sh 'mvn clean package sonar:sonar'
      }
    }
  }
  stages {
    stage('App complie') {
      steps {
        sh './mvnw compile'
      }
    }
    stage('App test') {
      steps {
        sh './mvnw test'
      }
    }
    stage('Generate jar') {
      steps {
        sh './mvnw clean package'
      }
    }
  }
} 
