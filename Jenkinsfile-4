#!groovy

pipeline {
  agent any
  tools {
     maven 'maven-3'
  }
  stages {
    stage("build & SonarQube analysis") {
       agent any
       steps {
          withSonarQubeEnv('sonarserver') {
             sh 'mvn clean package sonar:sonar \
                   -Dsonar.organization=drexxcbba \
                   -Dsonar.projectKey=drexxcbba_spring-petclinic'
          }
       }
    }
  }
}
